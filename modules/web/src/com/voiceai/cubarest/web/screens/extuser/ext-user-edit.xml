<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        extends="/com/haulmont/cuba/gui/app/security/user/edit/user-edit.xml">

    <layout>
        <groupBox id="propertiesBox">
            <grid id="propertiesGrid">
                <columns>
                    <column id="fieldGroupLastColumn" flex="3"/>
                </columns>
                <rows>
                    <row id="propertiesRow">
                        <fieldGroup id="fieldGroupLast" datasource="userDs" width="AUTO">
                            <column width="250px">
                                <field id="phone" property="phone"/>
                            </column>
                        </fieldGroup>
                    </row>
                </rows>
            </grid>

        </groupBox>
    </layout>
</window>
